<Window x:Class="teste_projeto_final.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:teste_projeto_final"
        mc:Ignorable="d"
        Title="Home" Height="450" Width="800">
     <Grid>
        <Border Background = "#CFE2F3" />
        <StackPanel Orientation = "Vertical" VerticalAlignment = "Center" HorizontalAlignment = "Stretch" >
            <Button Background = "Blue" Content = "Login" HorizontalAlignment = "Stretch" Margin = "300,0,300,20" FontSize="20" CommandParameter="{Binding}" Command="{Binding Loginx}" />
            <Button Background = "Blue" Content = "Cadastrar-se" HorizontalAlignment = "Stretch" Margin = "300,20,300,0" FontSize="20" CommandParameter="{Binding}" Command="{Binding Novox}" />
            <Button Background = "Blue" Content = "Sair" HorizontalAlignment = "Stretch" Margin = "300,20,300,0" FontSize="20" CommandParameter="{Binding}" Command="{Binding Sairx}" />
        </StackPanel>
    </Grid>
</Window>
